generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["views"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             Int     @id @default(autoincrement())
  Name           String
  email          String  @unique
  hashedPassword String
  Role           String
  vendas         Venda[]
}

model Venda {
  id            Int             @id @default(autoincrement())
  userId        Int
  data          DateTime  @default(now())
  user          User            @relation(fields: [userId], references: [id])
  venda_produto venda_produto[]
}

model Produto {
  id             Int             @id @default(autoincrement())
  Nome   String
  unidadePesagem String
  preco          Int
  perecivel      Boolean
  venda_produto  venda_produto[]
}

model venda_produto {
  id                       Int     @id @default(autoincrement())
  produtoId                Int
  vendaId                  Int
  quantidade               Float
  preco_unitario           Int
  preco_produto_totaltotal     Int
  Venda                    Venda   @relation(fields: [vendaId], references: [id])
  Produto                  Produto @relation(fields: [produtoId], references: [id])
}

view ProdutosMaisVendidos {
  produtoId      Int?
  nome           String?
  unidadePesagem String?
  total_vendido  Int?
  valor_total    Int?
}

view vendas_telas {
  id                       Int?
  Name                     String?
  data                     DateTime?
  nome_produto             String?
  preco                    Int?
  unidadePesagem           String?
  quantidade               Int?
  preco_produto_totaltotal Int?
}

enum Role {
  FUNCIONARIO
  ADMINISTRADOR
}
