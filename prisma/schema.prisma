generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             Int      @id @default(autoincrement())
  Name           String
  email          String   @unique
  hashedPassword String
  Role           String
  Venda          Venda[]
}

model Venda {
  id     Int       @id @default(autoincrement())
  userId Int
  data   DateTime

  user   User      @relation(fields: [userId], references: [id])
  produtos venda_produto[]
}

model Produto {
  id             Int             @id @default(autoincrement())
  Nome           String
  unidadePesagem String
  preco          Int
  perecivel      Boolean

  vendas         venda_produto[]
}

model venda_produto {
  id                    Int      @id @default(autoincrement())
  produtoId             Int
  vendaId               Int
  quantidade            Int
  preco_unitario        Int
  preco_produto_totaltotal Int

  produto               Produto  @relation(fields: [produtoId], references: [id])
  venda                 Venda    @relation(fields: [vendaId], references: [id])
}
